<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="root" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pattern.Controller.DetailController" alignment="CENTER" hgap="10" vgap="10">
    <Label text="Merk:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <Label fx:id="merkLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Huurprijs:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <Label fx:id="huurprijsLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Verzekering:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Label fx:id="verzekeringLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Klant:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Label fx:id="klantLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Medewerker:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <Label fx:id="medewerkerLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Button fx:id="retourButton" text="Retour" GridPane.columnIndex="0" GridPane.rowIndex="5" />

    <CheckBox fx:id="verzekerenCheckbox" text="Verzekeren?" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <Label text="Totale huurprijs:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
    <Label fx:id="totaleHuurprijsLabel" GridPane.columnIndex="1" GridPane.rowIndex="7" />

    <TextField fx:id="klantNaamTextField" promptText="Klantnaam" GridPane.columnIndex="0" GridPane.rowIndex="8" />
    <Button fx:id="verhuurButton" text="Verhuur" GridPane.columnIndex="1" GridPane.rowIndex="8" />
</GridPane>
